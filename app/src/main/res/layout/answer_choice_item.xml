<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/answer_choice_background_default"
    android:padding="@dimen/layout_side_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/answer_choice_letter"
        style="@style/QuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout="@+id/fragment_question_text"
        android:layout_gravity="center_vertical"
        android:text="A."/>

    <TextView
        android:id="@id/fragment_question_text"
        android:layout_toRightOf="@id/answer_choice_letter"
        style="@style/QuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="The Constitution"/>

</LinearLayout>